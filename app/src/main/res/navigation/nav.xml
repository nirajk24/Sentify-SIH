    <activity
        android:id="@+id/loginActivity"
        android:name="com.example.sentimentanalysis.auth.LoginActivity"
        android:label="activity_login"
        tools:layout="@layout/activity_login" />
    <activity
        android:id="@+id/signUpActivity"
        android:name="com.example.sentimentanalysis.auth.SignUpActivity"
