        tools:layout="@layout/activity_sign_up" />
    <activity
        android:id="@+id/mainActivity"
        android:name="com.example.sentimentanalysis.sentiment.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" />
    <activity
